{
    "$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "indentWidth": 4,
            "indentStyle": "space",
            "lineWidth": 120,
            "quoteProperties": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "lineWidth": 120,
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "files": {
        "includes": ["**", "!**/.next/**", "!**/.node_modules/**"]
    }
}
